<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <shape>
            <solid android:color="@color/custum_tab_color"/>
            <corners android:radius="2dp" />
            <stroke
                android:dashGap="0dp"
                android:width="2.5dp"
                android:color="@color/custum_tab_color" />
            <padding android:left="10dp"
              android:top="10dp"
              android:right="10dp"
              android:bottom="10dp"/>
        </shape>
    </item>
    <item android:state_selected="false">
        <shape>
            <solid android:color="@color/base_bg_white"/>
            <corners android:radius="2dp" />
            <stroke
                android:dashGap="0dp"
                android:width="2.5dp"
                android:color="@color/custum_tab_color" />
            <padding android:left="10dp"
              android:top="10dp"
              android:right="10dp"
              android:bottom="10dp"/>
        </shape>
    </item>
</selector>