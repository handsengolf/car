<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:textSize="12sp"
        android:padding="4dp"
        android:textColor="@android:color/white"
        android:background="@drawable/chat_time_bg"
        android:id="@+id/chat_receive_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="4月12日 早上07:51" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <ImageView
            android:id="@+id/chat_receive_picture"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@mipmap/icon"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/chat_receive_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="50dp"
            android:layout_toRightOf="@id/chat_receive_picture"
            android:background="@drawable/chat_tv_receive"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="hello" />

        <TextView
            android:textSize="12sp"
            android:padding="2dp"
            android:text="0.8"
            android:layout_marginLeft="-45dp"
            android:id="@+id/chat_receive_match_rate"
            android:layout_toRightOf="@id/chat_receive_content"
            android:gravity="center_vertical"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>


</LinearLayout>