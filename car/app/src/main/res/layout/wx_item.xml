<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:orientation="horizontal"
    android:background="@drawable/wx_item_bg">

    <ImageView
        android:id="@+id/wx_item_picture"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/icon" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:padding="6dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            android:paddingTop="3dp">
            <TextView
                android:id="@+id/wx_item_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:gravity="center_vertical"
                android:text="哈哈"
                android:textSize="18sp" />
            <TextView
                android:id="@+id/wx_item_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="50dp"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:lines="1"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:text="大师傅futygfghjtgy"
                android:textColor="@color/tab_color"
                android:textSize="14sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="2"
            android:paddingTop="3dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="0"
                android:layout_marginBottom="4dp"
                android:gravity="right"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginRight="5dp"
                    android:textSize="12sp"
                    android:id="@+id/wx_item_time"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center|center_vertical"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:lines="1"
                    android:text="11:20    "
                    android:textColor="@color/tab_color" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="0"
                android:gravity="right"
                android:layout_gravity="top"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginRight="20dp"
                    android:layout_gravity="top"
                    android:textSize="8sp"
                    android:id="@+id/wx_item_worning"
                    android:layout_width="84px"
                    android:layout_height="77px"
                    android:gravity="center|center_vertical"
                    android:background="@mipmap/bg_message_worning"
                    android:layout_alignParentRight="true"
                    android:layout_centerHorizontal="true"
                    android:text="25"
                    android:textColor="@color/bg_white" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>